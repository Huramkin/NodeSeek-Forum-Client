{
  "name": "nodeseek-client",
  "version": "0.1.0",
  "description": "NodeSeek DeepFlood forum desktop client built with Electron and React",
  "author": "NodeSeek Contributors",
  "license": "MIT",
  "main": "dist/main/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:preload\" \"npm:dev:electron\"",
    "dev:renderer": "vite dev",
    "dev:main": "tsc -w -p tsconfig.main.json",
    "dev:preload": "tsc -w -p tsconfig.preload.json",
    "dev:electron": "wait-on dist/main/main.js dist/preload/index.js http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "package": "npm run build && electron-builder",
    "preview:e2e": "npm run build:renderer && vite preview --host 127.0.0.1 --port 4173 --strictPort",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write .",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test": "npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-store": "^9.0.0",
    "keytar": "^7.9.0",
    "lucide-react": "^0.564.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite3": "^5.1.7",
    "styled-components": "^6.1.11",
    "tailwind-merge": "^3.4.1",
    "webdav": "^5.6.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.1",
    "@types/styled-components": "^5.1.33",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.4",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.3.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.4",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=20"
  }
}
